function renderCart() {
  updateCartitems();
  updateCarttotal();
}

function updateCartitems() {
  $('#cartitems').html(renderCartContents());
}

function updateCarttotal() {
  $('#carttotal').html('<%= j render(partial: 'shared/cart_total') %>');
}

function renderCartContents() {
  return '<%= escape_javascript(render @cart.cartitems)%>' 
}

renderCart();
