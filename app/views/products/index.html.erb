<div class="table-responsive"> 
  <table class="table">
    <tr>
      <th>Product name<th>
      <th>Category<th>
      <th>Price<th>
      <th><th>
    </tr>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %><td>
        <td><%= product.category %><td>
        <td><%= product.price %><td>
        <td><%= button_to 'add to cart', cartitems_path, params: {id: product.id}, remote: true %><td>
      </tr> 
    <% end %>
  </table>
</div>
